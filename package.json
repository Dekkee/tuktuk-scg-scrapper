{
    "name": "tuktuk-scg-scrapper",
    "version": "0.1.2",
    "description": "The starcitygames.com shop price srapper",
    "homepage": "https://scg.dekker.gdn",
    "email": "dekker25@gmail.com",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build --stream",
        "dev": "lerna run dev --stream",
        "test": "lerna run test --stream",
        "test:ci": "lerna run test:ci --stream",
        "update-index": "cross-env AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY node --max_old_space_size=8192 -r ts-node/register ./tools/generator/scryfall",
        "docker:build": "docker-compose build"
    },
    "repository": "https://github.com/Dekkee/tuktuk-scg-scrapper.git",
    "main": "index.js",
    "author": "Dekker",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "axios": "^0.19.1",
        "pretty-bytes": "^5.3.0",
        "progress": "^2.0.3"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "aws-sdk": "^2.601.0",
        "cross-env": "^7.0.2",
        "github-release-notes": "^0.17.1",
        "husky": "^4.0.3",
        "is-docker": "^2.0.0",
        "jest": "^24.9.0",
        "jest-github-reporter": "^0.4.4",
        "lerna": "^3.20.2",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "typescript": "^3.0.1"
    },
    "workspaces": [
        "packages/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "!(*generated|*data)/*.{ts,js,css,json,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
