        "@babel/cli": "^7.8.4",
        "@types/body-parser": "^1.17.0",
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.0",
        "@types/morgan": "^1.7.35",
        "axios": "^0.21.1",
        "body-parser": "^1.18.3",
        "colors": "^1.3.1",
